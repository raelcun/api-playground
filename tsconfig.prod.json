{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2017",
      "es6",
      "dom"
    ],
    "baseUrl": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.integration.ts"
  ]
}