{
  "name": "api-playground",
  "version": "1.3.0",
  "description": "",
  "license": "ISC",
  "engines": {
    "node": ">=12.4.0",
    "yarn": ">=1.16.0"
  },
  "author": "",
  "main": "src/server.ts",
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "image:build": "docker build -t gcr.io/api-playground-245105/api-playground .",
    "image:deploy": "kubectl set image deployment/api-playground-deployment api-playground=gcr.io/api-playground-245105/api-playground",
    "image:push": "docker push gcr.io/api-playground-245105/api-playground",
    "image:start": "docker run -it -d -p 4443:4443 gcr.io/api-playground-245105/api-playground",
    "lint": "prettier --write 'src/**/*.ts' && eslint 'src/**/*.ts'",
    "start": "NODE_CONFIG_DIR=./src/configuration ts-node-dev -r tsconfig-paths/register --no-notify -P tsconfig.json src/server.ts | pino-pretty -c -l -i time,hostname,pid",
    "start:prod": "NODE_ENV=production NODE_CONFIG_DIR=./dist/src/configuration node dist/src/server.js",
    "test": "NODE_ENV=test NODE_CONFIG_DIR=./src/configuration jest --no-cache",
    "test:fast": "yarn test --cache",
    "test:coverage": "yarn test -- --collect-coverage",
    "prepipeline": "yarn lint && yarn test"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^8.3.5",
    "aws-sdk": "^2.556.0",
    "axios": "^0.19.0",
    "casbin": "^3.0.4",
    "config": "^3.2.4",
    "fp-ts": "^2.1.1",
    "http-status-codes": "^1.3.2",
    "io-ts": "^2.0.1",
    "io-ts-reporters": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.10.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^5.2.0",
    "koa-router": "^7.4.0",
    "pem": "^1.14.3",
    "pino": "^5.15.0",
    "rate-limiter-flexible": "^1.2.2"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^2.1.10",
    "@types/config": "^0.0.36",
    "@types/jest": "^24.0.25",
    "@types/koa": "^2.0.51",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.40",
    "@types/lolex": "^5.1.0",
    "@types/pem": "^1.9.5",
    "@types/pino": "^5.15.1",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "lolex": "^5.1.2",
    "pino-pretty": "^3.5.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "ts-node-dev": "^1.0.0-pre.32",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  }
}
