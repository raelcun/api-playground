  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "node",
      "request": "launch",
      "env": {
        "NODE_CONFIG_DIR": "./src/config",
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "args": [
        "${workspaceFolder}/src/server.ts"
      ],
      "runtimeArgs": [
        "--preserve-symlinks",
        "--preserve-symlinks-main",
        "-r",
        "ts-node/register",
      ]
    }
  ]
}